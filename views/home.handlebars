<h1>Search for GIFS</h1>

<form action="/">
  <input type="text" name="term">
  <button type="submit">Search</button>
  <button type="button" class="trend-button">Trending</button>
</form>

<!-- Handlebars "for each statement" -->
<div class="row-container">

{{#each gifs}}

<!-- For each gif passed in, display using url & id -->
<div class="tenor-gif-embed" data-postid="{{this.id}}" data-share-method="host" data-width="500px"
data-aspect-ratio="1.2266666666666666">
<a href="{{this.itemurl}}"></a>
  <a href="{{this.url}}"></a>
</div>
<script type="text/javascript" async src="https://tenor.com/embed.js"></script>

<!-- End loop -->
{{/each}}

</div>
